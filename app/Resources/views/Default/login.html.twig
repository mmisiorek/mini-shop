{% extends 'base.html.twig' %}

{% block body_header_text %}
    Login
{% endblock %}

{% block body %}
    <form action="{{ path('login') }}" method="post" class="form-login">
        <div class="form-group row">
            <label class="col-form-label col-sm-2 form-control-label required" for="_username">Username:</label>
            <div class="col-sm-10">
                <input type="text" id="username" name="_username" required="required"
                       class="form-control" value="{{ lastUsername }}" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2 form-control-label required" for="_password">Password:</label>
            <div class="col-sm-10">
                <input type="password" id="password" name="_password" required="required"
                       class="form-control" />
            </div>
        </div>
        {% if error %}
        <div class="row error-row">
            <div class="col-sm-10 invalid-feedback">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        </div>
        {% endif %}
        <div class="form-group row col-md-12 submit-row">
            <input type="submit" class="btn btn-primary" value="Submit" />
        </div>
    </form>
{% endblock %}