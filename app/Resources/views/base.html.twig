<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Mini shop{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('build/app.css') }}" />
    </head>
    <body>
        <div class="container">
            <nav class="navbar navbar-toggleable-md navbar-dark bg-dark">
                <a class="navbar-brand" href="/">Mini shop</a>
                <span class="navbar-text">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <a href="{{ path('logout') }}" class="btn btn-outline-danger">Logout</a>
                    {% else %}
                        <a href="{{ path('login') }}" class="btn btn-outline-primary">Login</a>
                    {% endif %}
                </span>
            </nav>
            <div class="body">
                <div class="body-head">
                    <div class="row">
                        <div class="col-md-6">
                            <h1>{% block body_header_text %}{% endblock %}</h1>
                        </div>
                        <div class="col-md-6">
                            {% block body_header_actions %}{% endblock %}
                        </div>
                    </div>
                </div>
                {% block body %}{% endblock %}
            </div>
        </div>
        <script src="{{ asset('build/app.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
